{
    // this is to render Jinja in your .sql files
    // it will also not-render any sql files in the target folder.
    // this is to make things easier
    "files.associations": {
          "*.sql": "jinja-sql",
          "**/target/**": ""
    },
    // settings to auto-find related cells
    // alt + R when you have a model file open to find the compiled version!
    "findrelated.rulesets": [
        {
            "name": "sql",
            "rules": [
                {
                    "pattern": "^(.*/)?models/(.*/)?(.+\\.sql)$",
                    "locators": [
                        "**/compiled/**/$3"
                    ]
                },
                {
                    "pattern": "^(.*/)?compiled/(.*/)?(.+\\.sql)$",
                    "locators": [
                        "**/run/**/$3"
                    ]
                },
                {
                    "pattern": "^(.*/)?run/(.*/)?(.+\\.sql)$",
                    "locators": [
                        "**/models/**/$3"
                    ]
                }
            ]
        }
      ],
    "findrelated.applyRulesets": ["sql"],
    "findrelated.openSideBySide": true,


    "[jinja-sql]": {
        // "editor.formatOnSave":true,
        "editor.rulers": [52, 92],
        "editor.tabSize": 4,
    },

    "workbench.editor.highlightModifiedTabs": true,
    // make Command Prompt the default shell for Windows
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    // you'll have to addd this setting to be your anaconda python path
    "python.pythonPath": "/Users/anders.swanson/opt/anaconda3/envs/DEV-dbt-syn/bin/python",
    "sql.linter.executablePath": "/Users/anders.swanson/opt/anaconda3/envs/dbt/bin/sqlfluff",


}